{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist-lib",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-lib",
    "public",
    "src/main.tsx",
    "src/App.tsx",
    "src/pages/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
